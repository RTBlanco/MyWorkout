<% if @errors %>
    <% @errors.each do |e| %>
    <h1> <%= e %> </h1>
    <%end%>
<%end%>

<%= form_for @workout do |w| %>
    <div>
        <%= w.label :title %>
        <%= w.text_field :title %>
    </div>

    <div>
        <%= w.label :muscle %>
        <%= w.text_field :muscle %>
    </div>

    <%= w.submit "Edit Workout" %>

    <% end %>