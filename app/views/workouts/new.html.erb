<% if @errors %>
    <% @errors.each do |e| %>
    <h6> <%= e %> </h6>
    <%end%>
<%end%>

<%= form_for @workout, url: user_workouts_path do |w| %>
    <div>
        <%= w.label :title %>
        <%= w.text_field :title %>
    </div>

    <div>
        <%= w.label :muscle %>
        <%= w.text_field :muscle %>
    </div>

    <%= w.submit "Create Workout" %>

    <% end %>